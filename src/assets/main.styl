.chat-q
.chat-a
    position relative
    padding 15px 15px 1px
    margin 0 0 15px
    border-radius 15px
    box-shadow 0 0 15px 0 alpha(#000, .1)
    &:after
        content ''
        display block
        position absolute
        bottom 6px
        width 18px
        height @width
        border-radius 50%

.chat-a
    background-color #fff
    &:after
        box-shadow 6px 6px 0 0 #fff
        left -15px

.chat-q


for $width in (100 200 300 400 500 600 700 800 900)
    .minw-{$width}
        min-width $width * 1px

for $lh in (10..30)
    .lh-{$lh}
        line-height $lh * 0.1

for $size in (10..50)
    .fs-{$size}px
        font-size $size * 1px

for $font in (300 'Light') (400 'Regular') (500 'Medium') (600 'SemiBold') (700 'Bold')
    .fw-{$font[0]}
        font-weight $font[0]
    $woff = './fonts/Montserrat-' + $font[1] + '.woff'
    $woff2 = './fonts/Montserrat-' + $font[1] + '.woff2'
    @font-face
        font-family 'Montserrat'
        src url($woff2), url($woff)
        font-weight $font[0]
        font-style normal
        font-optical-sizing auto



.schart
    display flex
    justify-content space-between
    align-items stretch
    height 120px
    margin 0 0 15px

.schart-item
    position relative
    width 26px

.schart-item:before
    content ''
    position absolute
    left 0
    width 10px
    background-color #613EEA

.schart-item:after
    content ''
    position absolute
    right 0
    width 10px
    background-color #007AFF

.schart-item:nth-child(1)
    &:before
        height 70%
        bottom 30%
        border-radius 5px 5px 0 0
    &:after
        height 30%
        bottom 0
        border-radius 0 0 5px 5px

